#Assign all the companies a rating based on how many maternity leave weeks they offer their employees

SELECT company_name, maternity_leave_weeks
FROM fortune_companies
ORDER BY maternity_leave_weeks asc;

SELECT company_name, maternity_leave_weeks,
CASE WHEN maternity_leave_weeks >=16  THEN '5 star company'
WHEN maternity_leave_weeks >=12 THEN '4 star company'
WHEN maternity_leave_weeks >=8 THEN '3 star comapny'
ELSE '2 star comapny'
END AS comnpany_rating
FROM fortune_companies
ORDER BY maternity_leave_weeks asc;

#Which industries have an average revenue of at least $200 Billion, and what are their avg revenues? 

SELECT industry,ROUND (AVG(revenue),1) AS avg_revenue
FROM fortune_companies
GROUP BY industry
HAVING avg_revenue >=200;
